<h1>Edit a Gun</h1>

<%= form_for @gun do |f| %>
    <div class="form-group">
        <%= f.label :gun_name %><br>
        <%= f.text_field :gun_name, class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.hidden_field :owner_id, value: @owner.id %><br>
    </div>

    <div class="actions">
        <%= f.submit "Update Gun" %>
    </div>
<% end %>
<br><br>


<% if current_user.id == @owner.id %>
    <%= link_to "Back To My Vault", owner_path(@owner) %>
    <%= link_to "Log Out", logout_path %>
<% end %>