<h1><%= @gun.gun_name %></h1>
<% if @gun.ammunition != nil %>
    <h3><%= @gun.ammunition[:caliber] %></h3>
    <h4>You have <%= @gun.ammunition[:quantity] %> rounds for this caliber.</h4>
<% else %>
    <h3>No ammo for this gun. <%= link_to "Time to buy more.", "https://www.cheaperthandirt.com/ammunition/", :target => "_blank" %></h3>
<% end %>



<br><br>

<% if current_user.id == @gun.owner.id %>
    <%= link_to "Back to My Vault", owner_path(@owner) %>
    <%= link_to "Edit This Gun", edit_owner_gun_path %>
    <%= link_to "Delete This Gun", @guns,  method: :delete, data: { confirm: 'Are You Sure?' } %>
    <%= link_to "Add New Gun", new_owner_gun_path %>
    <%= link_to "Log Out", logout_path %>
<% end %>