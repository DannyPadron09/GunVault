<h1>Add New Owner</h1>

<%= form_for @owner do |f| %>
    <div class="form-group">
        <%= f.label :username %><br>
        <%= f.text_field :username, class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :password %><br>
        <%= f.password_field :password, class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :favorite_gun %><br>
        <%= f.text_field :favorite_gun, class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :age %><br>
        <%= f.number_field :age, class: "form-control" %><br>
    </div>

    <div class="actions">
        <%= f.submit "Sign Up" %>
    </div>
<% end %>
<br>
<%= link_to "Home", root_path %>