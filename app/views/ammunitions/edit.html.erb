<h1>Edit Ammo Count</h1>

<%= form_for @ammo do |f| %>
    <div class="form-group">
        <%= f.label :quantity %>
        <%= f.text_field :quantity, value: @ammo.quantity, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.hidden_field :owner_id, value: @owner.id %><br>
    </div>

    <div class="actions">
        <%= f.submit "Update Ammo Count" %>
    </div>
<% end %>