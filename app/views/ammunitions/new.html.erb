<h1>Add New Ammo</h1>


<%= form_for(@ammo) do |f| %>
    <% if @ammo.errors.any? %>
        <div id="error_explanation">
            <h2>There are some errors:</h2>
            
            <% @ammo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </div>
    <% end %>
    <br>
    <div class="form-group">
        <%= f.label :caliber %>
        <%= f.text_field :caliber, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :quantity %>
        <%= f.text_field :quantity, class: "form-control" %>
    </div>

    <div class="actions">
        <%= f.submit "Add New Ammo" %>
    </div>
<% end %>
<br>
<%= link_to "All Ammo", ammunitions_path %>